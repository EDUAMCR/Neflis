<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Neflis</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet"
          href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
          crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/site-custom.css" asp-append-version="true" />
</head>
<body class="@ViewData["BodyClass"]">
    <header>
        <nav class="navbar navbar-expand-lg" style="background:#221f1f;">
            <div class="container-fluid">
                <a class="navbar-brand d-flex align-items-center text-light" asp-controller="Home" asp-action="Index">
                    <img src="~/img/logo.jpg" alt="Neflis" class="me-2" style="height:32px;object-fit:contain;" />
                    <span>Neflis</span>
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                        data-bs-target="#mainNavbarContent">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="mainNavbarContent">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        @if (User.Identity != null && User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-light" asp-controller="Catalogo" asp-action="Index">Catálogo</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-light" asp-controller="PerfilSelector" asp-action="Index">Perfiles</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-light" asp-controller="MiLista" asp-action="Index">Mi lista</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-light" asp-controller="Suscripciones" asp-action="MiPlan">Mi plan</a>
                            </li>
                            <li class="nav-item">
                                <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                                    <button type="submit" class="btn btn-link nav-link text-light" style="text-decoration:none;">
                                        Salir
                                    </button>
                                </form>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <main role="main">
        @RenderBody()
    </main>

    <footer class="text-center py-3 footer-dark">
        &copy; @DateTime.Now.Year - Neflis
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
