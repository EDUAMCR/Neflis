@{
    Layout = null; // Esta vista no usa el _Layout principal
    ViewData["Title"] = "Bienvenido";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Neflis</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <link rel="stylesheet"
          href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
          crossorigin="anonymous" />

    <link rel="stylesheet" href="~/css/welcome.css" asp-append-version="true" />

    <style>
        body.neflis-page {
            min-height: 100vh;
            /* 1) ponemos las dos capas por separado */
            background-image: linear-gradient(180deg, rgba(0,0,0,.55), rgba(0,0,0,.9)), url('/img/fondo_2.jpg');
            /* 2) que no se repitan */
            background-repeat: no-repeat, no-repeat;
            /* 3) posiciones: el degradado centrado, la imagen un poco más arriba */
            background-position: center center, center top;
            /* 4) tamaños: el degradado ocupa todo, la imagen la hacemos más pequeña */
            /* prueba con 950px y luego ajustas */

            background-size: 100% 100%,100px auto;
            /* 5) que se quede fija si quieres ese efecto */
            background-attachment: fixed, fixed;
            display: flex;
            justify-content: center;
            align-items: center;
            font-family: "Segoe UI", Roboto, system-ui, sans-serif;
        }


        .welcome-box {
            background: rgba(34, 31, 31, .85); /* tu #221f1f con transparencia */
            backdrop-filter: blur(4px);
            border-radius: 20px;
            padding: 3rem 3.5rem;
            max-width: 520px;
            width: 92%;
            text-align: center;
            box-shadow: 0 12px 35px rgba(0,0,0,.35);
        }

        .welcome-logo {
            height: 70px;
            object-fit: contain;
            margin-bottom: 1.5rem;
        }

        .welcome-title {
            font-size: 1.4rem;
            font-weight: 600;
            margin-bottom: .85rem;
        }

        .welcome-text {
            font-size: .95rem;
            color: rgba(245,245,241,.85);
            margin-bottom: 1.7rem;
        }

        .btn-acceder {
            background: #e50914;
            border: none;
            padding: .7rem 2.8rem;
            border-radius: 999px;
            font-weight: 600;
        }

        .footer-text {
            margin-top: 2.3rem;
            font-size: .8rem;
            color: rgba(245,245,241,.5);
        }

        @@media (max-width: 576px) {
            .welcome-box {
                padding: 2.2rem 1.4rem;
            }
        }

        {
            padding: 2.2rem 1.4rem;
        }

        }
    </style>
</head>
<body class="welcome-page">
    <div class="welcome-box text-center">
        <img src="~/img/logo.jpg" alt="Neflis" class="welcome-logo" />

        <h2 class="welcome-title mb-3">Accedé para continuar con tu cuenta</h2>

        <p class="welcome-text mb-4">
            Gestioná tus perfiles, elegí tu plan, administrá tus métodos de pago
            y descubrí el mejor contenido de entretenimiento.
        </p>

        <a asp-controller="Account" asp-action="Login" class="btn btn-acceder btn-lg px-5">
            Acceder
        </a>

        <div class="footer-text mt-5">
            © @DateTime.Now.Year - Proyecto Neflis
        </div>
    </div>
</body>
</html>