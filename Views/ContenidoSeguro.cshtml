@{
    ViewData["Title"] = "Desbloquear contenido restringido";
}

<h2>Desbloquear contenido restringido</h2>

<form asp-action="Index" method="post">
    <div class="mb-3">
        <label class="form-label">Contraseña de desbloqueo</label>
        <input type="password" name="password" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Desbloquear</button>
    <a asp-action="Bloquear" class="btn btn-secondary">Bloquear</a>
</form>
