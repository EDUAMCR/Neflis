@model Neflis.Models.Perfil

@{
    ViewData["Title"] = "Eliminar perfil";
}

<div class="auth-shell">
    <div class="auth-card" style="max-width:420px;">
        <h2 class="auth-title mb-3">Eliminar perfil</h2>

        <p class="mb-3">
            ¿Seguro que deseas eliminar el perfil <strong>@Model.NombrePerfil</strong>?
        </p>

        <form asp-action="Delete" method="post">
            <input type="hidden" asp-for="PerfilId" />
            <button type="submit" class="btn-auth-primary mb-2" style="background:#e50914;">Sí, eliminar</button>
        </form>

        <a asp-action="Index" class="btn-auth-secondary">Cancelar</a>
    </div>
</div>
