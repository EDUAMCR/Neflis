@model Neflis.Models.ViewModels.RegistroViewModel

@{
    ViewData["Title"] = "Registrarse";
    Layout = "_Layout";
    ViewData["BodyClass"] = "auth-body";
}

<div class="auth-shell">
    <div class="auth-wrapper">
        <div class="auth-card">
            <img src="~/img/logo.jpg" alt="Neflis" class="auth-logo" />

            <h2 class="auth-title">Crear cuenta</h2>

            <form asp-controller="Account" asp-action="Register" method="post" class="text-start">
                @Html.AntiForgeryToken()

                <div asp-validation-summary="All" class="text-warning small"></div>

                <div class="mb-3">
                    <label asp-for="Correo" class="form-label"></label>
                    <input asp-for="Correo" class="form-control" />
                    <span asp-validation-for="Correo" class="text-warning small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="NombreCompleto" class="form-label"></label>
                    <input asp-for="NombreCompleto" class="form-control" />
                    <span asp-validation-for="NombreCompleto" class="text-warning small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Password" class="form-label"></label>
                    <input asp-for="Password" class="form-control" type="password" />
                    <span asp-validation-for="Password" class="text-warning small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="ConfirmarPassword" class="form-label"></label>
                    <input asp-for="ConfirmarPassword" class="form-control" type="password" />
                    <span asp-validation-for="ConfirmarPassword" class="text-warning small"></span>
                </div>

                <button type="submit" class="btn-auth-primary">Crear cuenta</button>
            </form>

            <a asp-action="Login" asp-controller="Account" class="btn-auth-secondary mt-3">
                Ya tengo cuenta
            </a>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
