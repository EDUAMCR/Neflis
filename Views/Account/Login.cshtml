@model Neflis.Models.ViewModels.LoginViewModel

@{
    ViewData["Title"] = "Iniciar sesión";
    Layout = "_Layout";
    ViewData["BodyClass"] = "auth-body";
}

<div class="auth-shell">
    <div class="auth-wrapper">
        <div class="auth-card">
            <img src="~/img/logo.jpg" alt="Neflis" class="auth-logo" />

            <h2 class="auth-title">Iniciar sesión</h2>

            @if (TempData["MensajeError"] != null)
            {
                <div class="alert alert-danger py-2 mb-3">@TempData["MensajeError"]</div>
            }

            <form asp-action="Login" method="post" class="text-start">
                <div class="mb-3">
                    <label asp-for="Correo" class="form-label"></label>
                    <input asp-for="Correo" class="form-control" placeholder="tucorreo@ejemplo.com" />
                    <span asp-validation-for="Correo" class="text-warning small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Password" class="form-label"></label>
                    <div class="input-group">
                        <input asp-for="Password" class="form-control" type="password" id="pwdLogin" />
                        <button type="button" class="btn" onclick="togglePwd()">👁</button>
                    </div>
                    <span asp-validation-for="Password" class="text-warning small"></span>
                </div>

                <button type="submit" class="btn-auth-primary">Iniciar sesión</button>
            </form>

            <a asp-action="Register" asp-controller="Account" class="btn-auth-secondary mt-3">
                Crear cuenta
            </a>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        function togglePwd() {
            const i = document.getElementById('pwdLogin');
            i.type = i.type === 'password' ? 'text' : 'password';
        }
    </script>
}
