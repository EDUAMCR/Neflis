@model Neflis.Models.ViewModels.ResetPasswordViewModel

@{
    ViewData["Title"] = "Restablecer contraseña";
}

<h2>Restablecer contraseña</h2>

<form asp-action="ResetPassword" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>

    <!-- Ocultos: el token y el correo vienen desde el link del correo -->
    <input asp-for="Token" type="hidden" />
    <input asp-for="Correo" type="hidden" />

    <div class="mb-3">
        <label asp-for="NuevaContrasena" class="form-label"></label>
        <input asp-for="NuevaContrasena" class="form-control" type="password" />
        <span asp-validation-for="NuevaContrasena" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="ConfirmarContrasena" class="form-label"></label>
        <input asp-for="ConfirmarContrasena" class="form-control" type="password" />
        <span asp-validation-for="ConfirmarContrasena" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-danger">
        Guardar nueva contraseña
    </button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
